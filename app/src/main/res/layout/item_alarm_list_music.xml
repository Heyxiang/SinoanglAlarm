<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_alarm_music"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/sw600_400dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/sw600_5dp"
        android:paddingLeft="@dimen/sw600_25dp"
        android:paddingRight="@dimen/sw600_25dp"
        android:paddingTop="@dimen/sw600_5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/sw600_10dp"
            android:layout_weight="1"
            android:textColor="@color/font_white"
            android:textSize="@dimen/sw600_20sp" />

        <ImageView
            android:id="@+id/iv_static"
            android:visibility="invisible"
            android:layout_width="@dimen/sw600_30dp"
            android:layout_height="@dimen/sw600_30dp"
            android:src="@mipmap/alarm_music_start" />
    </LinearLayout>
</LinearLayout>