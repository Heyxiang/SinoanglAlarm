<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/sw600_400dp"
        android:layout_height="@dimen/sw600_500dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bk_yuanjiao"
            android:paddingBottom="@dimen/sw600_20dp"
            android:paddingTop="@dimen/sw600_20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ok"
                android:layout_width="@dimen/sw600_80dp"
                android:layout_height="@dimen/sw600_80dp"
                android:src="@drawable/btn_alarm_ok" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/sw600_80dp"
                android:layout_height="@dimen/sw600_80dp"
                android:layout_marginLeft="@dimen/sw600_100dp"
                android:src="@drawable/btn_alarm_close" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>